<div class="row form">
  <div class="col-lg-12">
    <%= form_for current_user do |f| %>
      <h2>登録情報</h2>
      <div class="form-group">
        <div class="field">
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :icon_image %><br />
          <%= f.file_field :avatar %>
        </div>

        <div class="field">
          <%= f.label :country %><br />
          <%= f.text_field :country %>
        </div>

        <div class="field">
          <%= f.label :genre %><br />
          <%= f.text_field :genre %>
        </div>

        <div class="field">
          <%= f.label :term %><br />
          <%= f.text_field :term %>
        </div>

        <div class="field">
          <%= f.label :cost %><br />
          <%= f.text_field :cost %> 万円
        </div>
      </div>

      <div class="form-group">
        <%= f.submit "送信", class: "btn btn-primary withripple" %>
      </div>
    <% end %>
  </div>
</div>
